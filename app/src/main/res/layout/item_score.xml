<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listTempat"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:padding="@dimen/_20sdp">

        <ImageView
            android:id="@+id/icMateri"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:src="@drawable/ic_score"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/tvScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_round"
            android:fontFamily="@font/robotobold"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_7sdp"
            android:text="80"
            android:textColor="@color/btnOrange"
            android:textSize="@dimen/_27ssp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvJam" />

        <TextView
            android:id="@+id/tvJam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:fontFamily="@font/robotobold"
            android:text="JAM"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintLeft_toRightOf="@id/icMateri"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvBenar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/robotobold"
            android:text="BENAR : "
            android:textColor="@android:color/white"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintLeft_toRightOf="@id/icMateri"
            app:layout_constraintTop_toBottomOf="@+id/tvJam" />

        <TextView
            android:id="@+id/tvSalah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/robotobold"
            android:text="SALAH : "
            android:textColor="@android:color/white"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintLeft_toRightOf="@id/icMateri"
            app:layout_constraintTop_toBottomOf="@+id/tvBenar" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>